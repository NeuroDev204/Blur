{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "ðŸš€ Run All Microservices",
            "configurations": [
                "IdentityService",
                "api-gateway",
                "profile-service",
                "post-service",
                "chat-service",
                "notification-service",
                "story-service"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "all",
                "order": 1
            }
        },
        {
            "name": "ðŸ”§ Run Core Services (Identity + Gateway + Profile)",
            "configurations": [
                "IdentityService",
                "api-gateway",
                "profile-service"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "type": "java",
            "name": "IdentityService",
            "request": "launch",
            "mainClass": "org.identityservice.IdentityServiceApplication",
            "projectName": "IdentityService",
            "cwd": "${workspaceFolder}/IdentityService",
            "envFile": "${workspaceFolder}/.env.shared",
            "env": {
                "DOTENV_FILENAME": ".env,.env.shared"
            },
            "vmArgs": "-Dspring.profiles.active=dev",
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "api-gateway",
